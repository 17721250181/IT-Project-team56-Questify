# Django Secret Key
# Generate a new one using: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here

# Django Debug Mode (set to False in production)
DJANGO_DEBUG=True
DEBUG=True

# OpenAI API Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_PROJECT_ID=your-openai-project-id-here

# Email Configuration
# For development, use console backend (prints to console)
# EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# For production, use SMTP backend (Gmail example)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-gmail-app-password
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# Database Configuration (optional, defaults to SQLite)
# For PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# Allowed Hosts (comma-separated, no spaces)
# DJANGO_ALLOWED_HOSTS=.onrender.com,yourdomain.com

# CORS Configuration
# FRONTEND_ORIGIN=https://your-frontend-domain.com
# DJANGO_CORS_ALLOWED_ORIGINS=https://your-frontend-domain.com,https://another-domain.com

# CSRF Configuration
# DJANGO_CSRF_TRUSTED_ORIGINS=https://your-frontend-domain.com,https://another-domain.com

# Session Configuration
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_SAMESITE=Lax
CSRF_COOKIE_SECURE=False
CSRF_COOKIE_SAMESITE=Lax

# Admin Emails (comma-separated, required in production)
# ADMIN_EMAILS=admin1@example.com,admin2@example.com

# WhiteNoise Configuration (for serving static files)
USE_WHITENOISE=True

# SSL Redirect (set to True in production with HTTPS)
# SECURE_SSL_REDIRECT=True
